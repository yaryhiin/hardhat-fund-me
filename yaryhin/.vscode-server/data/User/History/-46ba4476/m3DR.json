{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "warn",
            "ignore-constructor"
        ],
        "indent": [
            "error",
            4
        ],
        "max-line-length": [
            "error",
            120
        ]
    }
}